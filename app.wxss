/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 

view, text, button{
  font-family: MicroSoft Yahei,Helvetica Neue, Helvetica, Arial, sans-serif;
}

.pageColumn {
  margin: 0 auto;
  width: 700rpx;
}

.card,.shortCard{
  background-color: #fff;
  margin-top: 30px;
  margin-bottom: 30px;
  padding-top: 30px;
  padding-bottom: 10px;
  width: 700rpx;
  height: auto;
  border-radius: 2px;
  box-shadow: 0 0 4px 0 rgba(0, 0, 0, 0.2);
}

.shortCard{
  padding-top: 10px;
}

.firstRow {
  height: 40px;
  align-items: flex-start;
  display: flex;
  flex-direction: row;
}

.firstRowItemA {
  height: 40px;
  margin-left: 30px;
}

.headPic {
  width: 40px;
  height: 40px;
  background-color: whtie;
  border-radius: 3px;
  float: left;
}

.firstRowItemB {
  height: 40px;
  width: auto;
  margin-left: 15px;
}

.name {
  font-size: 16px;
  line-height: 20px;
  color: #4f94cd;
}

.date {
  font-size: 11px;
  line-height: 20px;
  color: #999;
}

.firstRowItemC {
  height: 40px;
  margin-right: 30px;
  flex: 1;
  text-align: right;
}

.menuContainer{
  position: relative;
  top: 0px;
  left: 700rpx;
}

.icon-menu {
  position: absolute;
  left: -42.5px;
  display: inline-block;
  width: 25px;
  height: 3px;
  padding: 5px 0;
  border-top: 3px solid;
  border-bottom: 3px solid;
  background-color: currentColor;
  background-clip: content-box;
  opacity: 0.5;
}

.icon-menu:active {
  opacity: 0.3;
}

.contentContainer {
  margin: 15px 30px;
  height: auto;
}

.pictureContainer {
  margin-top: 20rpx;
  margin: 0 auto;
  align-items: flex-start;
  display: flex;
  flex-direction: column;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.pictureRow {
  align-items: flex-start;
  display: flex;
  flex-direction: row;
}

.inputText {
  font-size: 16px;
  margin-top: 30px;
  margin-left: 5rpx;
  padding: 10px;
  border-style: dashed;
  border-width: 1px;
  border-color: rgba(0, 0, 0, 0.2);
}

button {
  font-size: 13px;
  text-align: center;
  width: 120rpx;
  height: 30px;
  line-height: 30px;
  border-radius: 4px;
}

.buttonA {
  color: #fff;
  background-color: rgb(9, 187, 7);
  border-color: #09bb07;
}

.buttonADisable {
  color: rgba(255, 255, 255, 0.5);
  background-color: rgba(9, 187, 7, 0.3);
  border-color: rgba(9, 187, 7, 0.3);
}

.buttonB {
  color: #1aad19;
  background-color: rgb(255, 255, 255);
  border-color: #1aad19;
}

.buttonC {
  color: #000;
  background-color: rgb(255, 255, 255);
  border-color: #ddd;
}

.buttonA:active {
  background-color: rgba(9, 187, 7, 0.6);
}

.buttonB:active {
  color: #fff;
  background-color: #1aad19;
}

.buttonC:active {
  background-color: rgba(200, 200, 200, 0.6);
}

.getUserInfoButton{
  width: auto;
  margin-left: 30px;
  font-size: 12px;
}

.selectionRow{
  height: 30px;
  align-items: flex-start;
  display: flex;
  flex-direction: row;
}

.selectionRowItemA{
  height: 30px;
  margin-left: 30px;
}

.wx-switch-input {
  width: 42px !important;
  height: 22px !important;
}

.wx-switch-input::before {
  width: 42px !important;
  height: 22px !important;
}

.wx-switch-input::after {
  width: 20px !important;
  height: 20px !important;
}