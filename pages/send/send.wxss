/* pages/send/send.wxss */

.text {
  font-size: 16px;
  margin-top: 50px;
  margin-left: 5rpx;
  padding: 10px;
  border-style: dashed;
  border-width: 1px;
  border-color: rgba(0, 0, 0, 0.2);
}

.pictureContainer {
  margin-top: 20rpx;
  width: 650rpx;
  margin: 0 auto;
  align-items: flex-start;
  display: flex;
  flex-direction: column;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.pictureRow {
  align-items: flex-start;
  display: flex;
  flex-direction: row;
}

.picture {
  height: 190rpx;
  width: 190rpx;
  margin: 5rpx;
  border-radius: 2px;
}

.selectionRow {
  height: 50px;
  align-items: flex-start;
  display: flex;
  flex-direction: row;
  font-size: 14px;
  line-height: 24px;
}

.selectionRowItemA {
  height: 50px;
}

.selectionRowItemB {
  margin-left: 15px;
  height: 50px;
}

.radio {
  display: block;
  padding: 10px;
}

.switchChange {
  display: block;
  padding: 10px;
}

.sendButton {
  height: 40px;
  width: 600rpx;
  font-size: 18px;
  line-height: 40px;
}

.sendContainer {
  margin-bottom: 50px;
}

.weui-uploader__hd {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding-bottom: 10px;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}

.weui-uploader__title {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}

.weui-uploader__info {
  color: #b2b2b2;
}

.weui-uploader__bd {
  margin-bottom: -4px;
  margin-right: -9px;
  overflow: hidden;
}

.weui-uploader__file {
  float: left;
  margin-right: 9px;
  margin-bottom: 9px;
}

.weui-uploader__img {
  display: block;
  width: 190rpx;
  height: 190rpx;
}

.weui-uploader__file_status {
  position: relative;
}

.weui-uploader__file_status:before {
  content: " ";
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.weui-uploader__file-content {
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  color: #fff;
}

.weui-uploader__input-box {
  float: left;
  position: relative;
  margin-right: 9px;
  margin-bottom: 9px;
  width: 185rpx;
  height: 185rpx;
  border: 1px solid #d9d9d9;
}

.weui-uploader__input-box:after, .weui-uploader__input-box:before {
  content: " ";
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #d9d9d9;
}

.weui-uploader__input-box:before {
  width: 5rpx;
  height: 95rpx;
}

.weui-uploader__input-box:after {
  width: 95rpx;
  height: 5rpx;
}

.weui-uploader__input-box:active {
  border-color: #999;
}

.weui-uploader__input-box:active:after, .weui-uploader__input-box:active:before {
  background-color: #999;
}

.weui-uploader__input {
  position: absolute;
  z-index: 1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}

.listItemA {
  width: 175rpx;
  height: 10px;
  padding-left: 25rpx;
  text-align: start;
  font-size: 14px;
}

.listItemB{
  font-size: 14px;
}

.listItemC{
  width: 100%;
  text-align: start;
}

#label{
  padding-left: 10rpx;
  text-align: start;
  font-size: 14px;
}

.switchLabel{
  padding-left: 0rpx;
  margin-left: 25rpx;
}

.checkbox{
  flex-direction: column;
  font-size: 14px;
  padding: 11rpx;
}