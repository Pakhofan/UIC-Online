<!--pages/detail/detail.wxml-->
<view>
  <view class='card'>
    <view class='topRightContainer'>
      <i class="icon-menu"></i>
    </view>
    <view bindtap='viewProfile' class="headContainer">
      <image class="headPic" mode='aspectFill' src="{{card.creator_avatar}}"></image>
    </view>
    <view class="headRightContainer">
      <view bindtap='viewProfile' class="name">{{card.creator_name}}</view>
      <view class="date">{{card.created_at}}</view>
    </view>
    <view class="contentContainer">
      <view class="text">
        <text selectable="true">{{card.text}}</text>
      </view>
      <view class="pictureContainer">
        <view class='pictureRow'>
          <image class="picture" wx:if="{{card.imgs[0]}}" src="{{card.imgs[0]}}" mode="aspectFill" catchtap='viewImage' data-src="{{card.imgs[0]}}" data-list="{{card.imgs}}"></image>
          <image class="picture" wx:if="{{card.imgs[1]}}" src="{{card.imgs[1]}}" mode="aspectFill" catchtap='viewImage' data-src="{{card.imgs[1]}}" data-list="{{card.imgs}}"></image>
        </view>
        <view class='pictureRow'>
          <image class="picture" wx:if="{{card.imgs[2]}}" src="{{card.imgs[2]}}" mode="aspectFill" catchtap='viewImage' data-src="{{card.imgs[2]}}" data-list="{{card.imgs}}"></image>
          <image class="picture" wx:if="{{card.imgs[3]}}" src="{{card.imgs[3]}}" mode="aspectFill" catchtap='viewImage' data-src="{{card.imgs[3]}}" data-list="{{card.imgs}}"></image>
        </view>
        <view class='pictureRow'>
          <image class="picture" wx:if="{{card.imgs[4]}}" src="{{card.imgs[4]}}" mode="aspectFill" catchtap='viewImage' data-src="{{card.imgs[4]}}" data-list="{{card.imgs}}"></image>
          <image class="picture" wx:if="{{card.imgs[5]}}" src="{{card.imgs[5]}}" mode="aspectFill" catchtap='viewImage' data-src="{{card.imgs[5]}}" data-list="{{card.imgs}}"></image>
        </view>
      </view>
    </view>




