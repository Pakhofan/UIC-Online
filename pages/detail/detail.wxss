/* pages/detail/detail.wxss */

.pageColumn {
  margin: 0 auto;
  width: 700rpx;
}

.card {
  background-color: #fff;
  margin-top: 30px;
  margin-bottom: 30px;
  padding-top: 30px;
  padding-bottom: 30px;
  width: 700rpx;
  height: auto;
  border-radius: 2px;
  box-shadow: 0 0 4px 0 rgba(0, 0, 0, 0.2);
}

.firstRow {
  height: 40px;
  align-items: flex-start;
  display: flex;
  flex-direction: row;
}

.firstRowItemA {
  height: 40px;
  margin-left: 30px;
}

.headPic {
  width: 40px;
  height: 40px;
  background-color: whtie;
  border-radius: 3px;
  float: left;
}

.firstRowItemB {
  height: 40px;
  width: auto;
  margin-left: 15px;
}

.name {
  font-size: 16px;
  line-height: 20px;
  color: #4f94cd;
}

.date {
  font-size: 11px;
  line-height: 20px;
  color: #999;
}

.firstRowItemC {
  height: 40px;
  margin-right: 30px;
  flex: 1;
  text-align: right;
}

.icon-menu {
  display: inline-block;
  width: 25px;
  height: 3px;
  padding: 5px 0;
  margin-top: 5px;
  border-top: 3px solid;
  border-bottom: 3px solid;
  background-color: currentColor;
  background-clip: content-box;
  opacity: 0.5;
}

.icon-menu:active {
  opacity: 0.3;
}

.contentContainer {
  margin: 15px 30px;
  height: auto;
}

.text {
  font-size: 16px;
}

.pictureContainer {
  margin-top: 20rpx;
  width: 650rpx;
  margin: 0 auto;
  align-items: flex-start;
  display: flex;
  flex-direction: column;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.pictureRow {
  align-items: flex-start;
  display: flex;
  flex-direction: row;
}

.picture {
  height: 310rpx;
  width: 310rpx;
  margin: 5rpx;
}

.commentLine {
  margin: 10px 30px;
  border-bottom-style: solid;
  border-color: rgba(200, 200, 200, 0.2);
  border-width: 1px;
}

.floor {
  font-size: 12pt;
  line-height: 20px;
  padding-bottom: 20px;
  color: rgba(200, 200, 200, 0.9);
}

.listContainer {
  font-size: 14px;
  line-height: 30px;
  margin: 0 auto;
  margin-top: 30px;
  margin-bottom: 100px;
  padding-top: 5px;
  padding-bottom: 10px;
  width: 700rpx;
  height: auto;
  border-radius: 2px;
  box-shadow: 0 0 4px 0 rgba(0, 0, 0, 0.2);
}

.list {
  margin: 20px 20rpx;
  height: 30px;
  width: 600rpx;
  margin-left: 50rpx;
  align-items: flex-start;
  display: flex;
  flex-direction: row;
  border-bottom-style: solid;
  border-color: rgba(200, 200, 200, 0.2);
  border-width: 1px;
}

.listItemA {
  width: 175rpx;
  height: 30px;
  padding-left: 25rpx;
  text-align: start;
}

.listItemB {
  width: 300rpx;
  height: 30px;
  padding-left: 25rpx;
  text-align: start;
}

.listItemC {
  width: 175rpx;
  height: 30px;
  text-align: center;
}

.inputText {
  font-size: 16px;
  margin-top: 30px;
  margin-left: 5rpx;
  padding: 10px;
  border-style: dashed;
  border-width: 1px;
  border-color: rgba(0, 0, 0, 0.2);
}

button {
  font-size: 13px;
  text-align: center;
  width: 120rpx;
  height: 30px;
  line-height: 30px;
  border-radius: 4px;
}

.buttonA {
  color: #fff;
  background-color: rgb(9, 187, 7);
  border-color: #09bb07;
}

.buttonB {
  color: #fff;
  background-color: rgb(136, 206, 135);
  border-color: #98dd96;
}

#sendButton {
  width: 200px;
}

.sendContainer {
  padding-top: 30px;
}

.wx-switch-input {
  width: 42px !important;
  height: 22px !important;
}

.wx-switch-input::before {
  width: 42px !important;
  height: 22px !important;
}

.wx-switch-input::after {
  width: 20px !important;
  height: 20px !important;
}
