/* pages/detail/detail.wxss */

.text {
  font-size: 16px;
}

.picture {
  height: 290rpx;
  width: 290rpx;
  margin: 5rpx;
}

.commentLine {
  margin: 10px 30px;
  border-bottom-style: solid;
  border-color: rgba(200, 200, 200, 0.2);
  border-width: 1px;
}

.floor {
  font-size: 12pt;
  line-height: 20px;
  padding-bottom: 20px;
  color: rgba(200, 200, 200, 0.9);
}

.sendButton {
  width: 200px;
}

.sendContainer {
  padding-top: 30px;
}

.backToIndex{
  display: flex;
  align-items: center;
  justify-content:center;
  flex-direction: row;
  margin-top: 5px;
  margin-left: 25rpx;
  width: 110px;
  height: 40px;
  background-color: #fff;
  border-color: #ccc;
  border-radius: 10px;
  box-shadow: 0 0 10px 0 rgba(100, 100, 100, 0.2);
}
.homeIcon{
  width: 40px;
  height: 40px;
}
.homeText{
  margin-right: 10px;
  line-height: 40px;
  font-size: 13px;
}

.btn-sharetofriend {
  font-size: 8pt;
  text-align: left;
  width: 200rpx;
  height: 20pt;
  line-height: 20pt;
  margin-top: 15px;
  margin-bottom: 15px;
  border: none;
  background-color: #fff;
  padding-left: 1px;
}

.btn-sharetofriend::after {
  border: none;
}

button::after{
    border: none;
}
i-action-sheet button{
  width: 100%;
}

.i-as-show{
    z-index: 999;
}