        <view class='listItemC'>
        </view>
      </view>
      <view class='list' style='border-style:none;'>
        <button class='buttonA' wx:if="{{ChangeWX}}" catchtap='onChangeWX'>保存</button>
        <button class='buttonA' wx:else catchtap='onChangeWX'>修改</button>
      </view>
    </view>
  </view>
