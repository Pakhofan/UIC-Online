      <text>个人信息</text>
    </view>
      <view class='list'>
        <view class='listItemA'>微信号</view>
        <textarea class='listItemB' placeholder='请输入信息' value="{{textWX}}" maxlength='150' auto-height='ture' cursor-spacing='100' bindinput='userInputWX' disabled="{{disabledWX}}"></textarea>
        <view class='listItemC'></view>
      </view>
