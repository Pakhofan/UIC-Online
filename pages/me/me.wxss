/* pages/me/me.wxss */
#mePage{
  padding-bottom: 50px;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 100rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 3px;
}

.userinfo-nickname {
  color: #aaa;
}

.getUserInfoButton{
  width: 200rpx;
  margin: 0 auto;
  font-size: 12px;
}

button {
  font-size: 11px;
  text-align: center;
  width: 120rpx;
  height: 25px;
  line-height: 25px;
  border-radius: 4px;
}

.logout {
  width: auto;
  margin-top: 20rpx;
  font-size: 12px;
}

.bottomText{
  position: fixed;
  bottom: 0;
  padding-top: 50px;
  width: 700rpx;
  text-align: center;
  margin: 0 auto;
  font-size: 11pt;
  color: #929292;
  margin-top: 100rpx;
}

.myRowA{
  border-left: 1px solid;
  border-left-color:#aaa;
  border-right: 1px solid;
  border-right-color:#aaa;
  display: flex;
  flex-direction: row;
  margin-top: 20px;
  width: 100%;
  padding-bottom: 11px;
}

.myRowItem{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 60px;
  height: auto;
  width: auto;
}

.myText{
  font-size: 12px;
  color: #aaa;
  margin-top: 3rpx;
}

.myImg{
  width: 60rpx;
  height: 60rpx;
}