/* pages/me/me.wxss */
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 3px;
}

.userinfo-nickname {
  color: #aaa;
}

.getUserInfoButton{
  width: 200rpx;
  margin: 0 auto;
  font-size: 12px;
}

button {
  font-size: 11px;
  text-align: center;
  width: 120rpx;
  height: 25px;
  line-height: 25px;
  border-radius: 4px;
}

.buttonA {
  color: #fff;
  background-color: rgb(9, 187, 7);
  border-color: #09bb07;
}

.buttonA:active {
  background-color: rgba(9, 187, 7, 0.6);
}

.logout {
  width: auto;
  margin-top: 20rpx;
  font-size: 12px;
}
