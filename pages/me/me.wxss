/* pages/me/me.wxss */
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 3px;
}

.userinfo-nickname {
  color: #aaa;
}

.getUserInfoButton{
  width: 200rpx;
  margin: 0 auto;
  font-size: 12px;
}

button {
  font-size: 11px;
  text-align: center;
  width: 120rpx;
  height: 25px;
  line-height: 25px;
  border-radius: 4px;
}

.buttonA {
  color: #fff;
  background-color: rgb(9, 187, 7);
  border-color: #09bb07;
}

.buttonA:active {
  background-color: rgba(7, 65, 6, 0.6);
}

.logout {
  width: auto;
  margin-top: 20rpx;
  font-size: 12px;
}

.history-info{
  font-size: 14px;
  line-height: 30px;
  margin-top: 30px;
  padding-top: 5px;
  padding-bottom: 10px;
  width: 700rpx;
  height: auto;
  border-radius: 2px;
  box-shadow: 0 0 4px 0 rgba(0, 0, 0, 0.2);
  text-align: center;
}