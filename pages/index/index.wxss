/**index.wxss**/
@import "/wxSearch/wxSearch.wxss";

.searchContainer {
  height: 42px;
  /* margin-top: -42px; */
}

.mainListContainer {
  position: relative;
}

.stv-container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.withAnimate {
  transition: all 100ms ease;
  -webkit-transform: translate3d(0, 0, 0);
  -moz-transform: translate3d(0, 0, 0);
  -ms-transform: translate3d(0, 0, 0);
  transform: translate3d(0, 0, 0);
  -webkit-backface-visibility: hidden;
  -moz-backface-visibility: hidden;
  -ms-backface-visibility: hidden;
  backface-visibility: hidden;
  -webkit-perspective: 1000;
  -moz-perspective: 1000;
  -ms-perspective: 1000;
  perspective: 1000;
}

.stv-container .tab-bar {
  position: relative;
  display: flex;
  font-size: 30rpx;
  color: #666;
}

.stv-container .tab-bar .tab-active {
  color: #09bb07;
}

.stv-container .tab-bar .tab {
  display: flex;
  align-items: center;
  justify-content: center;
  padding-top: 16rpx;
  padding-bottom: 20rpx;
}

.stv-container .tab-bar .under-line {
  position: absolute;
  bottom: 0;
  height: 6rpx;
  background-color: #09bb07;
}

.stv-container .scroll-view {
  position: relative;
  width: 100%;
  height: 100%;
  background: #fff;
}

.stv-container .scroll-view .scroll-view-wrapper {
  position: absolute;
  top: 0;
  bottom: 0;
  display: flex;
}

.stv-container .scroll-view .scroll-view-wrapper .one-scene {
  height: 100%;
}

.tab-bar {
  z-index: 999;
  background-color: white;
}

#mainScrollView {
  overflow-y: none;
}

#indexColumn {
  margin-bottom: 50rpx;
  padding-bottom: 50rpx;
}

.text {
  font-size: 16px;
}

.picture {
  height: 190rpx;
  width: 190rpx;
  margin: 5rpx;
}

.singlePic {
  height: 400rpx;
  width: 400rpx;
  margin: 5rpx;
  border-radius: 3px;
}

.bottomContainer {
  padding-top: 10px;
  padding-bottom: 10px;
  width: 600rpx;
  margin: 0 auto;
}

.bottomRow {
  align-items: center;
  display: flex;
  flex-direction: row;
}

.icon {
  width: 20px;
  height: 20px;
}

.btn-sharetofriend {
  font-size: 8pt;
  text-align: left;
  width: 200rpx;
  height: 20pt;
  line-height: 20pt;
  margin-top: 15px;
  margin-bottom: 15px;
  border: none;
  background-color: #fff;
  padding-left: 1px;
}

.btn-sharetofriend::after {
  border: none;
}

.positionRow {
