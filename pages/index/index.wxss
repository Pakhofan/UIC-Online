/**index.wxss**/

#indexPage {
  background-color: #eee;
  height: 100%;
  padding-top: 50rpx;
}

.card {
  background-color: #fff;
  margin: 0 auto;
  margin-bottom: 50rpx;
  width: 650rpx;
  height: auto;
  border-radius: 5px;
  box-shadow: 0 0 8px 0 rgba(0, 0, 0, 0.2);
}

.headRightContainer {
  height: 50px;
  width: 500rpx;
  margin-left: 120rpx;
  float: right;
}

.headContainer {
  height: 0rpx;
  margin-left: 40rpx;
  margin-top: 40rpx;
  float: left;
}

.headPic {
  width: 40px;
  height: 40px;
  background-color: whtie;
}

.name {
  font-size: 16px;
  color: #4f94cd;
}

.date {
  font-size: 11px;
  color: #999;
}

.topRightContainer {
  height: 0px;
  float: right;
  margin-right: 50rpx;
  margin-top: 40rpx;
}

.icon-menu {
  display: inline-block;
  width: 25px;
  height: 3px;
  padding: 5px 0;
  margin-top: 5px;
  border-top: 3px solid;
  border-bottom: 3px solid;
  background-color: currentColor;
  background-clip: content-box;
  opacity: 0.5;
}
.icon-menu:active {
  opacity: 0.3;
}

.contentContainer {
  margin-top: 0rpx;
  margin-left: 0rpx;
  height: auto;
  width: 600rpx;
}

.text {
  font-size: 16px;
  margin-left: 40rpx;
  margin-right: 10rpx;
}

.pictureContainer {
  margin-top: 20rpx;
  width: 630rpx;
  margin: 0 auto;
  align-items: center;
  display: flex;
  flex-direction: column;
  padding-bottom: 20rpx;
  padding-left: 15rpx;
}

.pictureRow {
  align-items: center;
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
}

.picture {
  height: 300rpx;
  width: 300rpx;
  margin-right: 10rpx;
}

.bottomContainer {
  padding-top: 20px;
  padding-bottom: 20px;
  width: 600rpx;
  border-top-style: solid;
  border-width: 1px;
  border-color: #ddd;
  margin: 0 auto;
}

.bottomRow {
  align-items: center;
  display: flex;
  flex-direction: row;
}

.icon {
  width: 20px;
  height: 20px;
}

button {
  font-size: 11pt;
  text-align: center;
  margin: 0 auto;
  width: 200rpx;
  height: 30pt;
  line-height: 30pt;
  border-radius: 6px;
  border-style: solid;
  border-width: 1px;
  margin-top: 15px;
  margin-bottom: 15px;
}

.buttonA {
  color: #fff;
  background-color: rgb(9, 187, 7);
  border-color: #09bb07;
}

.buttonB {
  color: #1aad19;
  background-color: rgb(255, 255, 255);
  border-color: #1aad19;
}

.buttonC {
  color: #000;
  background-color: rgb(255, 255, 255);
  border-color: #ddd;
}

.buttonA:active {
  background-color: rgba(9, 187, 7, 0.6);
}

.buttonB:active {
  color: #fff;
  background-color: #1aad19;
}

.buttonC:active {
  background-color: rgba(200, 200, 200, 0.6);
}
