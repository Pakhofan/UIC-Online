/**index.wxss**/

#indexPage {
  margin-top: 60px;
}

.weui-navbar{display:-webkit-box;display:-webkit-flex;display:flex;position:absolute;z-index:500;top:0;width:100%;}.weui-navbar__item{position:relative;display:block;-webkit-box-flex:1;-webkit-flex:1;flex:1;padding:13px 0;text-align:center;font-size:0}.weui-navbar__item.weui-bar__item_on{color:#1aad19}.weui-navbar__slider{position:absolute;content:" ";left:0;bottom:0;width:6em;height:3px;background-color:#1aad19;-webkit-transition:-webkit-transform .3s;transition:-webkit-transform .3s;transition:transform .3s;transition:transform .3s,-webkit-transform .3s}.weui-navbar__title{display:inline-block;font-size:13px;max-width:8em;width:auto;overflow:hidden;text-overflow:ellipsis;white-space:nowrap;word-wrap:normal}

#myNav{
  position: fixed;
  top: 0;
  left: 0;
  height: 40px;
  background-color: white;
  -webkit-overflow-scrolling:touch;
}

.text {
  font-size: 16px;
}

.picture {
  height: 190rpx;
  width: 190rpx;
  margin: 5rpx;
}

.singlePic{
  height: 400rpx;
  width: 400rpx;
  margin: 5rpx;
  border-radius: 3px;
}

.bottomContainer {
  padding-top: 10px;
  padding-bottom: 10px;
  width: 600rpx;
  margin: 0 auto;
}

.bottomRow {
  align-items: center;
  display: flex;
  flex-direction: row;
}

.icon {
  width: 20px;
  height: 20px;
}

button {
  font-size: 11pt;
  text-align: center;
  margin: 0 auto;
  width: 180rpx;
  height: 26pt;
  line-height: 26pt;
  border-radius: 5px;
  border-style: solid;
  border-width: 1px;
  margin-top: 15px;
  margin-bottom: 15px;
}
