/* component/cardTree/cardTree.wxss */
.mainListContainer {
  width: 750rpx;
  height: 100%;
  position: relative;
}

.stv-container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.withAnimate {
  transition: all 100ms ease;
  -webkit-transform: translate3d(0, 0, 0);
  -moz-transform: translate3d(0, 0, 0);
  -ms-transform: translate3d(0, 0, 0);
  transform: translate3d(0, 0, 0);
  -webkit-backface-visibility: hidden;
  -moz-backface-visibility: hidden;
  -ms-backface-visibility: hidden;
  backface-visibility: hidden;
  -webkit-perspective: 1000;
  -moz-perspective: 1000;
  -ms-perspective: 1000;
  perspective: 1000;
}

.stv-container .tab-bar {
  position: relative;
  display: flex;
  font-size: 30rpx;
  color: #666;
}

.stv-container .tab-bar .tab-active {
  color: #09bb07;
}

.stv-container .tab-bar .tab {
  display: flex;
  align-items: center;
  justify-content: center;
  padding-top: 16rpx;
  padding-bottom: 20rpx;
}

.stv-container .tab-bar .under-line {
  position: absolute;
  bottom: 0;
  height: 6rpx;
  background-color: #09bb07;
}

.stv-container .scroll-view {
  position: relative;
  width: 100%;
  height: 100%;
  background: #fff;
}

.stv-container .scroll-view .scroll-view-wrapper {
  position: absolute;
  top: 0;
  bottom: 0;
  display: flex;
}

.stv-container .scroll-view .scroll-view-wrapper .one-scene {
  height: 100%;
}

.tab-bar {
  background-color: white;
  box-shadow: 0 1px 3px 0 rgba(100, 100, 100, 0.2);
}

.mainScrollView {
  width: 750rpx;
  overflow-y: none;
}

.indexColumn {
  margin-bottom: 50rpx;
  padding-bottom: 50rpx;
}

.textBetweenLine{
  display: table;
	width: 600rpx;
  height: 32px;
  margin-bottom: 30px;
  padding-bottom: 30px;
	line-height: 32px;
  margin: 0 auto;
  font-size: 12pt;
  color: #ccc;
	background-color: #fff;
	white-space: nowrap;
	border-spacing: 10px 0;
}

.textBetweenLine:before,.textBetweenLine:after{
	display: table-cell;
	content: '';
	width: 50%;
	background: -webkit-linear-gradient(#eee,#eee) repeat-x left center;
	background: linear-gradient(#eee,#eee) repeat-x left center;
	background-size: 1px 1px;
}

.loading{
  width: 80px;
  height: 80px;
  margin-top: 12px;
}