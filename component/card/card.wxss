/* component/card/card.wxss */
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 

.pageColumn {
  margin: 0 auto;
  width: 700rpx;
}

.card,.shortCard{
  background-color: #fff;
  margin-top: 15px;
  margin-bottom: 15px;
  margin-left: 25rpx;
  padding-top: 20px;
  padding-bottom: 10px;
  width: 700rpx;
  height: auto;
  border-radius: 5px;
  box-shadow: 0 0 10px 0 rgba(100, 100, 100, 0.2);
}

.shortCard{
  padding-top: 10px;
}

.firstRow {
  height: 40px;
  align-items: flex-start;
  display: flex;
  flex-direction: row;
}

.firstRowItemA {
  height: 40px;
  margin-left: 20px;
}

.headPic {
  width: 40px;
  height: 40px;
  background-color: whtie;
  border-radius: 50px;
  float: left;
}

.firstRowItemB {
  height: 40px;
  width: auto;
  margin-left: 15px;
}

.name {
  font-size: 16px;
  line-height: 20px;
  color: #4f94cd;
}

.date {
  font-size: 11px;
  line-height: 20px;
  color: #999;
}

.firstRowItemC {
  height: 40px;
  margin-right: 30px;
  flex: 1;
  text-align: right;
}

.menuContainer{
  position: relative;
  top: 0px;
  left: 700rpx;
}

.icon-menu {
  position: absolute;
  left: -22.5px;
  display: inline-block;
  width: 3px;
  height: 3px;
  padding: 4px 0;
  border-top: 3px solid;
  border-bottom: 3px solid;
  border-radius: 3px;
  background-color: currentColor;
  background-clip: content-box;
  opacity: 0.5;
}

.icon-menu:active {
  opacity: 0.3;
}

.contentContainer {
  margin-top: 15px;
  margin-bottom: 10px;
  margin-left: 20px;
  margin-right: 20px;
  height: auto;
}

.pictureContainer {
  margin-top: 20rpx;
  margin: 0 auto;
  align-items: flex-start;
  display: flex;
  flex-direction: column;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.pictureRow {
  align-items: flex-start;
  display: flex;
  flex-direction: row;
}

.inputText {
  font-size: 16px;
  margin-top: 30px;
  margin-left: 5rpx;
  padding: 10px;
  border-style: dashed;
  border-width: 1px;
  border-color: rgba(0, 0, 0, 0.2);
}

button {
  font-size: 13px;
  text-align: center;
  width: 120rpx;
  height: 30px;
  line-height: 30px;
  border-radius: 4px;
}

.buttonA {
  color: #fff;
  background-color: rgb(9, 187, 7);
  border-color: #09bb07;
}

.buttonADisable {
  color: rgba(255, 255, 255, 0.5);
  background-color: rgba(9, 187, 7, 0.3);
  border-color: rgba(9, 187, 7, 0.3);
}

.buttonB {
  color: #1aad19;
  background-color: rgb(255, 255, 255);
  border-color: #1aad19;
}

.buttonC {
  color: #000;
  background-color: rgb(255, 255, 255);
  border-color: #ddd;
}

.buttonA:active {
  background-color: rgba(9, 187, 7, 0.6);
}

.buttonB:active {
  color: #fff;
  background-color: #1aad19;
}

.buttonC:active {
  background-color: rgba(200, 200, 200, 0.6);
}

.getUserInfoButton{
  width: auto;
  margin-left: 20px;
  font-size: 12px;
}

.selectionRow{
  height: 30px;
  align-items: flex-start;
  display: flex;
  flex-direction: row;
}

.selectionRowItemA{
  height: 30px;
  margin-left: 20px;
}

.wx-switch-input {
  width: 42px !important;
  height: 22px !important;
}

.wx-switch-input::before {
  width: 42px !important;
  height: 22px !important;
}

.wx-switch-input::after {
  width: 20px !important;
  height: 20px !important;
}

.lastRow{
  height: 30px;
  margin: 0 20rpx;
  align-items: center;
  display: flex;
  flex-direction: row;
}

.lastRowItem,.likeContainer,.commentContainer,.shareContainer{
  display: flex;
  align-items: center;
  justify-content:center;
  flex-direction: row;
  width: 100%;
  height: 30px;
  text-align: start;
}

.likeContainer,.commentContainer{
  width: auto;
}

.shareContainer,.shareContainer:hover,.shareContainer:active{
  width: auto;
  line-height: 30px;
  margin-top: 0;
  margin-bottom: 0;
  background-color: rgba(0, 0, 0, 0);
  border-style: none;
}

.iconButton{
  width: 20px;
  height: 20px;
  margin-right: 5px;
}

.iconText{
  display: inline-block;
  line-height: 20px;
  color: #ccc;
  font-size: 12px;
}

.lastRowItemA{
  margin-left: 10rpx;
  margin-right: 50rpx;
}

.lastRowItemB{
  margin-left: 50rpx;
}

.lastRowItemC{
  margin-right: 10rpx;
}


.listContainer {
  font-size: 14px;
  line-height: 30px;
  margin-top: 30px;
  padding-top: 5px;
  padding-bottom: 10px;
  width: 700rpx;
  height: auto;
  border-radius: 2px;
  box-shadow: 0 0 4px 0 rgba(0, 0, 0, 0.2);
}

.list {
  margin: 20px 20rpx;
  height: 30px;
  width: 600rpx;
  margin-left: 50rpx;
  align-items: flex-start;
  display: flex;
  flex-direction: row;
}

.underLine{
  border-bottom-style: solid;
  border-color: rgba(200, 200, 200, 0.2);
  border-width: 1px;
}

.listB {
  margin: 10px 20rpx;
  height: 15px;
  width: 600rpx;
  margin-left: 50rpx;
  align-items: flex-start;
  display: flex;
  flex-direction: row;
}

.listItemA {
  width: 175rpx;
  height: 30px;
  padding-left: 25rpx;
  text-align: start;
}

.listItemB {
  width: 300rpx;
  height: 30px;
  padding-left: 25rpx;
  text-align: start;
}

.listItemC {
  width: 175rpx;
  height: 30px;
  text-align: center;
}

.textBetweenLine{
  display: table;
	width: 600rpx;
  height: 32px;
  margin-bottom: 15px;
  padding-bottom: 15px;
	line-height: 32px;
  margin: 0 auto;
  font-size: 12pt;
  color: #ccc;
	background-color: #fff;
	white-space: nowrap;
	border-spacing: 10px 0;
}

.textBetweenLine:before,.textBetweenLine:after{
	display: table-cell;
	content: '';
	width: 50%;
	background: -webkit-linear-gradient(#eee,#eee) repeat-x left center;
	background: linear-gradient(#eee,#eee) repeat-x left center;
	background-size: 1px 1px;
}

.labelText{
  color: rgb(226, 114, 30)
}

.positionText{
  color: #4f94cd;
  font-size: 13px;
  line-height: 20px;
}

.text {
  font-size: 16px;
}

.picture {
  height: 190rpx;
  width: 190rpx;
  margin: 5rpx;
}

.singlePic {
  height: 400rpx;
  width: 400rpx;
  margin: 5rpx;
  border-radius: 3px;
}

.bottomContainer {
  padding-top: 10px;
  padding-bottom: 10px;
  width: 600rpx;
  margin: 0 auto;
}

.bottomRow {
  align-items: center;
  display: flex;
  flex-direction: row;
}

.icon {
  width: 20px;
  height: 20px;
}

.btn-sharetofriend {
  font-size: 8pt;
  text-align: left;
  width: 200rpx;
  height: 20pt;
  line-height: 20pt;
  margin-top: 15px;
  margin-bottom: 15px;
  border: none;
  background-color: #fff;
  padding-left: 1px;
}

.btn-sharetofriend::after {
  border: none;
}

.viewAllText{
  margin-top: 5px;
  text-align: left;
  float: right;
  color: #576b95;
}